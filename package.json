{
  "name": "inventory-sync-mcp",
  "version": "1.0.0",
  "description": "MCP server for syncing Shopify and Etsy inventory to Excel",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "agent": "npm run build && node dist/cli.js",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0",
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "exceljs": "^4.4.0",
    "openai": "^5.12.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "jest": "^29.0.0",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  }
}
